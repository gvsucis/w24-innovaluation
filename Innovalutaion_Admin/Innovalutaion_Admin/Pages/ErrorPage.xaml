<Page x:Class="Innovalutaion_Admin.Pages.ErrorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Innovalutaion_Admin.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ErrorPage">

    <Grid Background="White">
        <Label Content="Something went wrong!" HorizontalAlignment="Center" Margin="0,63,0,0" VerticalAlignment="Top" FontSize="24" FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,105,0,0" TextWrapping="Wrap" Text="Error: Something bad happened and you were unable to log into the firebase database" VerticalAlignment="Top" Height="79" Width="283"/>
        <Button Content="Click here to try reconnecting" HorizontalAlignment="Center" VerticalAlignment="Center" Height="45" Width="201" Click="Button_Click"/>


    </Grid>
</Page>
